{
    "CreatePivot": {
        "prefix": "CreatePivot",
        "description": "Creates a new pivot entity.",
        "body": [
            "CreatePivot($world)"
        ]
    },
    "CreateWindow": {
        "prefix": "CreateWindow",
        "description": "Creates a new Window.",
        "body": [
            "CreateWindow($display, $title, $x, $y, $width, $height, $style)"
        ]
    },
    "WINDOW_TITLEBAR": {
        "prefix": "WINDOW_TITLEBAR",
        "description": "Adds a title bar at the top of the window.",
        "body": [
            "WINDOW_TITLEBAR"
        ]
    },    
    "Entity.SetPosition": {
        "prefix": "Entity:SetPosition",
        "description": "Sets the position of an entity in 3-dimensional space, using local or global coordinates.",
        "body": [
            ":SetPosition($x, $y, $z, $global)"
        ]
    },
    "Entity.SetPosition(2)": {
        "prefix": "Entity:SetPosition",
        "description": "Sets the position of an entity in 3-dimensional space, using local or global coordinates.",
        "body": [
            ":SetPosition($position, $global)"
        ]
    }    
